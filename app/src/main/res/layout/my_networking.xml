<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/my_networking"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="gone"
	android:clickable="true">

	<View
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/backgroundPrimary"
		android:alpha="0.9" />

	<LinearLayout
		android:id="@+id/hey_error"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_centerInParent="true"
		android:layout_margin="@dimen/padding4x"
		android:visibility="gone">

		<TextView
			android:id="@+id/hey_error_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Error Title"
			android:textSize="@dimen/textXXXLarge"
			android:gravity="center"
			android:paddingBottom="@dimen/padding"/>

		<TextView
			android:id="@+id/hey_error_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Error Message"
			android:textSize="@dimen/textXXXXLarge"
			android:gravity="center"/>

		<Button
			android:id="@+id/hey_error_button"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:text="OK"
			android:layout_marginTop="@dimen/padding2x"/>
	</LinearLayout>

	<ProgressBar
		android:id="@+id/hey_loading_spinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:indeterminate="true"
		android:visibility="gone"/>

</RelativeLayout>